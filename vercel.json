{
  "rewrites": [
    {
      "source": "/api/web/:path*",
      "destination": "https://api-web.nhle.com/:path*"
    },
    {
      "source": "/api/stats/:path*",
      "destination": "https://api.nhle.com/:path*"
    }
  ],
  "crons": [
    {
      "path": "/api/calculate-scores",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/live-stats",
      "schedule": "0,15,30,45 17-23,0-2 * * *"
    }
  ]
}
